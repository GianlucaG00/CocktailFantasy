<section id="header" class="jumbotron text-center">
  <h1 class="display-3">Lista dei Bar</h1>
  <p class="lead">Lorem ipsum, dolor sit amet consectetur adipisicing elit.</p>
  <a href="/bars/new" class="btn btn-lg btn-success"><i class="fa-solid fa-plus"></i></a>
</section>
<section id="gallery">
  <div class="container">
    <div class="row">
      <%@bars.each do |bar|%>
        <div class="col-lg-4 mb-4">
          <div class="card">
            <img src="https://images.unsplash.com/photo-1477862096227-3a1bb3b08330?ixlib=rb-1.2.1&auto=format&fit=crop&w=700&q=60" alt="" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title text-center"><%=bar.name%> <i class="fa-solid fa-shop"></i></h5>
              <hr/>
              <p class="card-text"><i class="fa-solid fa-align-justify"></i> <%=bar.description%></p>
              <p class="card-text"><i class="fa-solid fa-location-dot"></i> <%=bar.address%></p>
              <%= link_to "Visualizza", bar, :class => "btn btn-outline-success btn-sm mx-1"%>
              <a class="btn btn-outline-danger btn-sm"><i class="far fa-trash"></i></a>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</section>

<hr/>

<% if drinker_signed_in? || barman_signed_in?%>
  <section id="header" class="jumbotron text-center">
    <h1 class="display-3">Bentornato!</h1>
    <p class="lead">Accedi alla tua area personale per usufruire dei tuoi servizi!</p>
    <div class="row justify-content-between mt-4">
      <div class="col-6">
        <%if drinker_signed_in?%>
          <a href="<%=drinkers_personalArea_path%>" class="btn btn-lg btn-primary">Area personale <i class="fa-solid fa-gear"></i></a>
      </div>
          <div class="col-6">
