<p id="notice"><%= notice %></p>

<h1>Bars</h1>
<%if barman_signed_in?%>
  Logged in as <%= current_barman.email%> [<%= link_to 'Logout', destroy_barman_session_path, :method => :delete%>]
<%end%>

<div class="row">
  <div class="col">
    <button type="button" class="btn btn-success">SUCCESS</button>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Tel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bars.each do |bar| %>
      <tr>
        <td><%= bar.name %></td>
        <td><%= bar.description %></td>
        <td><%= bar.address %></td>
        <td><%= bar.tel %></td>
        <td><%= link_to 'Show', bar %></td>
        <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
        <td><%= link_to 'Destroy', bar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bar', new_bar_path %>
