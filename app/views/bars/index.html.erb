      </div>
          <div class="col-6">
            <%=link_to "Logout", destroy_drinker_session_path, method: :delete, :class => "btn btn-lg btn-danger"%>
          </div>
        <%end%>
      </div>
    </div>
  </section>
<%else%>
  <section id="header" class="jumbotron text-center">
    <h1 class="display-3">Sei un drinker o un Barman?</h1>
