<div class="row text-center mt-3">
  <div class="col">
    <h1> Effettua il login  </h1>
  </div>
</div>
<hr/>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="col-12">
    <%= f.label :email, :class => "form-label"%>
    <%= f.email_field :email, :autofocus => true, :autocomplete => "email",  :class => "form-control", :placeholder => "Inserisci la mail", :require => true%>
  </div>

  <div class="col-12">
    <%= f.label :password, :class => "form-label"%>
    <%= f.password_field :password, :autofocus => true, :autocomplete => "email",  :class => "form-control", :placeholder => "Inserisci la password", :require => true%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>


  <%= link_to "Sign in with Facebook!!", barman_facebook_omniauth_authorize_path, method: :post%>
<% end %>

<%= render "barmen/shared/links" %>

