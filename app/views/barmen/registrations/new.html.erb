<div class="row text-center">
  <div class="col">
    <h1>Iscriviti al nostro servizio</h1>
    <h2>Diventa un Barman!</h2>
  </div>
</div>
<hr/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "barmen/shared/error_messages", resource: resource %>

  <div class="col-12">
    <%= f.label :name, :class => "form-label", :value => "Nome"%> 
    <%= f.text_field :name, :class => "form-control", :placeholder => "Inserisci il nome", :require => true%>
  </div>

  <div class="col-12">
    <%= f.label :surname, :class => "form-label", :value => "Cognome"%>
    <%= f.text_field :surname, :class => "form-control", :placeholder => "Inserisci il cognome", :require => true%>
  </div>

  <div class="col-12">
    <%= f.label :email, :class => "form-label", :value => "Email"%> <i class="fa-solid fa-envelope"></i>
    <%= f.email_field :email, :autocomplete => "email",  :class => "form-control", :placeholder => "Inserisci l'email", :require => true%>
  </div>

  <div class="col-12">
    <%= f.label :password, :value => "Password"%> <i class="fa-solid fa-key"></i>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caratteri almeno)</em>
    <% end %><br />
     <%= f.password_field :password, :class => "form-control", :autocomplete => "new-password", :placeholder => "Inserisci la password", :require => true%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :value => "Conferma Password"%> <i class="fa-solid fa-key"></i>
    <%= f.password_field :password_confirmation, :class => "form-control", :autocomplete => "new-password", :placeholder => "Conferma Password" %>
  </div>

  <div class="row justify-content-center mt-4">
      <div class="col-4">
        <%= f.submit "Registrati", :class => "btn btn-success" %>
      </div>
      <div class="col-4">
        <%= link_to barman_facebook_omniauth_authorize_path, method: :post, :class => "btn btn-primary facebook" do%>
				  Continua con Facebook <i class="fa-brands fa-facebook-f" aria-hidden="true" target="_blank"></i>
		    <%end%>
      </div>
      <div class="col-4">
        <%= link_to barman_google_oauth2_omniauth_authorize_path, method: :post, :class => "btn btn-primary" do%>
				  Continua con Google <i class="fa-brands fa-google" aria-hidden="true" target="_blank"></i>
		    <%end%>
      </div>
  </div>

  <div class="row mt-4">
    <div class="col-4">
      <span>Sei gi√† registrato ?</span>
        <%= link_to "Effettua il login!", barman_session_path , :class => "link-success" %>
    </div>
  </div>

<% end %>
