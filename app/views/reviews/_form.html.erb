<%= form_with(model: [@bar, @review]) do |form| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% @review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-6 col-12">
      <div class="col-12">
        <label for="text" class="form-label">Testo Recensione </label>
        <%= form.text_field :text, :class => "form-control", :placeholder => "Inserisci la recensione", :require => true%>
      </div>
      <div class="col-12">
        <label for="vote" class="form-label">Voto </label>
        <%= form.number_field :vote, :class => "form-control", :placeholder => "Inserisci il voto", :require => true, :min => 0, :max => 5%>
      </div>
      <div class="col-12 mt-4 text-center">
        <button type="submit" class="btn btn-lg btn-success">Pubblica</button>
        <button type="reset" class="btn btn-lg btn-warning">Reset</button>
      </div>
    </div>
    <div class="col-lg-6 col-12">
      <%= image_tag "review/review.jpg", :class => "rounded-circle img-fluid"%>
    </div>

  </div>
<% end %>
