<div class="row mt-3">
  <div class="col text-center">
    <h1>Registrazione <strong>Drinker</strong> <i class="fa-solid fa-user"></i></h1>
  </div>
</div>
<hr/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "drinkers/shared/error_messages", resource: resource %>



  <div class="col-12">
    <%= f.label :email, :class => "form-label"%> <i class="fa-solid fa-envelope"></i>
    <%= f.email_field :email, :autofocus => true, :autocomplete => "email",  :class => "form-control", :placeholder => "Inserisci la mail", :require => true%>
  </div>

  <div class="col-12">
    <%= f.label :password %> <i class="fa-solid fa-key"></i>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br /> 
    <%= f.password_field :password, :autofocus => true, autocomplete: "new-password",  :class => "form-control", :placeholder => "Inserisci la password", :require => true%>
  </div>

  <div class="col-12">
    <%= f.label :password_confirmation, :class => "form-label"%> <i class="fa-solid fa-key"></i>
    <%= f.password_field :password_confirmation, :autofocus => true, :autocomplete => "new-password",  :class => "form-control", :placeholder => "Inserisci conferma password", :require => true%>
  </div>


  <div class="row justify-content-between mt-4">
    <div class="col-4">
      <%= f.submit "Registrati", :class => "btn btn-success" %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col">
      <span>Non sei giÃ  registrato?</span>
      <%= link_to "Registrati ora!", drinker_session_path , :class => "link-success" %>
    </div>
  </div>
<% end %>

