<%if barman_signed_in?%>
  <div class="row text-center mt-3">
    <div class="col-12">
      <h1>Accesso Negato <i class="fa-solid fa-x" style="color:red"></i></h1>
    </div>
  </div>
  <hr/>
  <div class="row text-center mt-3">
    <div class="col-12">
      <h2>Spiacente, sei gi√† loggato come <strong>Barman</strong> <i class="fa-solid fa-user-tie"></i></h2>
      <h2>Effettua prima il <%= link_to 'Logout', destroy_barman_session_path, :method => :delete%></h2>
    </div>
  </div>
<%else%>
  <!-- Utente NON loggato --->
  <div class="container mt-3">
    <div class="row text-center">
      <div class="col">
        <h1>Log in <strong>Drinker</strong> <i class="fa-solid fa-user"></i></h1>
      </div>
    </div>
  
    <hr/>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <div class="col-12">
      <%= f.label :email, :class => "form-label"%>
      <%= f.email_field :email, :autofocus => true, :autocomplete => "email",  :class => "form-control", :placeholder => "Inserisci la mail", :require => true%>
    </div>

    <div class="col-12">
      <%= f.label :password, :class => "form-label"%>
      <%= f.password_field :password, :autofocus => true, :autocomplete => "email",  :class => "form-control", :placeholder => "Inserisci la password", :require => true%>
    </div>

    <%if devise_mapping.rememberable?%>
      <div class="form-check form-switch my-4">
        <%= f.check_box :remember_me, :class => "form-check-input", :type => "checkbox", :id => "flexSwitchCheckChecked", :checked => "true" %>
        <%= f.label :Ricordami, :class => "form-check-label", :for => "flexSwitchCheckChecked"%>
      </div>
    <%end%>


    <div class="row justify-content-center">
      <div class="col-3">
        <%= f.submit "Login", :class => "btn btn-lg btn-success"%>
      </div>
      <div class="col-3">
        <button type="reset" class="btn btn-lg btn-warning">Reset</button>
      </div>
    </div>


    <div class="row justify-content-between mt-4">
      <div class="col-4">
        <%= f.submit "Login", :class => "btn btn-success" %>
      </div>
      <!--
      <div class="col-4">
        <%= link_to drinker_facebook_omniauth_authorize_path, method: :post, :class => "btn btn-primary facebook" do%>
				  Continua con Facebook <i class="fa-brands fa-facebook-f" aria-hidden="true" target="_blank"></i>
		    <%end%>
      </div>
      -->
    </div>

    <div class="row mt-4">
      <div class="col">
        <span>Non sei ancora registrato?</span>
        <%= link_to "Registrati ora!", new_barman_registration_path , :class => "link-success" %>
      </div>
    </div>
    <% end %>
  </div>
<%end%>

<%= render "drinkers/shared/links" %>
