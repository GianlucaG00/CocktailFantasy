<h1>Aggiungi nel menu un nuovo Cocktail</h1>
<p id="notice"><%= notice %></p>
<%= render 'form', cocktail: @cocktail %>
<hr/>
<div class="row">
  <div class="col text-center">
    <h2>Vuoi cercare le informazioni? </h2>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <%= form_with url: "/api", :method => :get do |form|%>
      <label for="cocktail_name" class="form-label">Nome del Cocktail </label>
      <%= form.text_field :cocktail_name, :class => "form-control", :placeholder => "Inserisci il nome del cocktail", :require => true%>
      <%= form.submit "Cerca informazioni", :class => "btn btn-lg btn-success mt-2"%>
    <%end%>
  </div>
</div>
<%= button_to "Cancella", new_cocktail_path, :method => :get ,:class => "btn btn-lg btn-danger mt-2"%>
<div class="row">
  <div class="col">
  </div>
</div>
<%if params[:found] == 'true'%>
  <%= params[:drink_name]%>
  <%= params[:id_drink]%>
  <div class="container">
    <img src="<%=params[:drink_img]%>" class="img-fluid">
  </div>
  <%= params[:instructions]%>
  <%= link_to 'Back', cocktails_path %>
  <%= javascript_pack_tag 'cocktails/search_api' %>
<%elsif params[:found] == 'false'%>
    <p> Spiecente, la ricerca non ha portato ad alcun risultato. Prova ad inserire un nome valido</p>
<%end%>
